{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "云朵助手",
  "version": "0.1.0",
  "identifier": "com.yang.zhushou",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "云朵助手",
        "label": "main",
        "width": 240,
        "height": 300,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "resizable": false,
        "center": true,
        "shadow": false,
        "skipTaskbar": true
      },
      {
        "title": "云宝待办",
        "label": "todo-manager",
        "url": "/?page=todos",
        "width": 360,
        "height": 540,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "alwaysOnTop": false,
        "visible": false,
        "skipTaskbar": true,
        "shadow": false,
        "x": 0,
        "y": 0
      },
      {
        "title": "云宝设置",
        "label": "settings",
        "url": "/?page=settings",
        "width": 360,
        "height": 310,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "shadow": false,
        "x": 0,
        "y": 0
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
